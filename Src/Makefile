###-----------------------------------------------------------------------------
### Title: Makefile
###  Maintainer: Henry G. Weller
###   make
###    Build Leda compiler 'lc' for the default target (optimized)
###-----------------------------------------------------------------------------
P_DIR = ..
DIR = /
include $(P_DIR)/Make/Makefile.config

###-----------------------------------------------------------------------------
### Set the default target
###-----------------------------------------------------------------------------
TARGET = opt

###-----------------------------------------------------------------------------
### Source files
###-----------------------------------------------------------------------------
SOURCES =	\
    lexer.l     \
    gram.y      \
    lc.c        \
    gen.c       \
    interp.c	\
    types.c	\
    memory.c

###-----------------------------------------------------------------------------
### Name of executable
###-----------------------------------------------------------------------------
PRODUCT = lc

###-----------------------------------------------------------------------------
### Include the build rules
###-----------------------------------------------------------------------------
include $(P_DIR)/Make/Makefile.build

clean:
	$M rm -rf $(OBJDIR)

###-----------------------------------------------------------------------------
