    lexer.l     \
    gram.y      \
    lc.c        \
    gen.c       \
    interp.c	\
    types.c	\
    memory.c

###-----------------------------------------------------------------------------
### Name of executable
###-----------------------------------------------------------------------------
PRODUCT = lc

